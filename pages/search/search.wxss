/* pages/search/search.wxss */
.main_wrap{
  width: 100%;
  background-color: white;
  font-size: 32rpx;
}

.header_wrap{
  width: 100%;
  min-height: 400rpx;
  position: relative;
}

.h_icon{
  width: 200rpx;
  height: 210rpx;
  position: absolute;
  left: 50%;
  bottom: 20%;
  transform: translateX(-50%);
}

.h_title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #1296db;
  text-align: center;
  font-weight: bold;
}

.h_img{
  width: 100%;
  height: 100%;
}

.body_wrap{
  position: relative;
  width: 600rpx;
  margin-left: 75rpx;
  min-height: 200rpx;

  border: 1px solid #1296db;  
}

.item_wrap{
  width: 100%;
  margin-left: 20rpx;
  margin-top: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.item_text{
  float: left;
}

.item_input{
  float: left;
  height: 80rpx;
  width: 480rpx;
  margin-left: 30rpx;
}

.item_button{
  float: right;
  margin-right: 90rpx;
  margin-top: 10rpx;
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #1296db;
  color: white;
  text-align: center;
  font-size:32rpx;
}

.result_wrap{
  width: 600rpx;
  border-left: 1px solid #1296db;
  margin: 30rpx 0 30rpx 75rpx;
  padding-bottom: 30rpx;
}

.r_title{
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  color: #1296db;
}

.r_body{
  margin-left: 20rpx;
}

.input{
  height: 100%;
  padding-left: 10rpx;
}

.noshow{
  display: none;
}