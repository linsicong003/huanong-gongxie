/* c_account.wxss */
.main_wrap{
  width: 100%;
}

/**index.wxss**/
.header_img{
  width:100%;
  height: 200rpx;
  position: relative;
  top: 50rpx;
}
/*标题图片*/
.header{
  width: 100%;
  height:350rpx;
  background-color: black;
  font-size:14px;
}

.tab_wrap{
  width: 720rpx;
  margin-left: 15rpx;
  min-height: 500rpx;
}

.tip_text{
  font-size: 54rpx;
  text-align: center;
}

.cancel_tap{
  width: 450rpx;
  margin-left: 135rpx;
  background-color: #34a123;
  color: white;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 100rpx;
  border-radius: 10rpx;
}

/* 修改密码 */
.rule_text{
  margin:20rpx 0 40rpx 25rpx;
  position: relative;
}

.submit{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  right: 20rpx;
  bottom: -95rpx;
  background-color: red;
  color: white;
  font-size: 40rpx;
  text-align: center;
  border-radius: 10rpx;
}

.return{
  width: 200rpx;
  bottom: 20rpx;
  background-color: #34a123;
}
.change_wrap{
  width: 750rpx;
  background-color: white;
  padding: 40rpx 0;
  position: relative;
}

.n_pw{
  margin:20rpx 0 20rpx 25rpx;
  font-size: 40rpx;
}

.pw_input{
  width: 500rpx;
  border-bottom: 1px solid black;
  display: inline-block;
  height: 80rpx;
}

.input_text{
  width: 150rpx;
  display: inline-block;
  height: 80rpx;
  line-height: 50rpx;
}

.no{
  display: none;
}