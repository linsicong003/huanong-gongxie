/* showdata.wxss */
page{
  display: block;
  min-height: 100%;
  background-color: #f1f1f1;
  overflow-x: hidden;
}
.select{
  background:url('http://littleapp-1252360401.cosgz.myqcloud.com/%E5%AF%B9%E5%8B%BE%E5%B0%8F.png') no-repeat;
  background-position: 95% 20%;
}

.select_wrapper{
  height: 150rpx;
  white-space: nowrap;
  overflow-x: scroll;
}

.radiogroup{
  height: 100%;
  white-space: nowrap;
}

.radio{
  display: inline-block;
  height: 100%;
  width: 200rpx;
  background-color: white;
  position: relative;
}

/* 设定选择器的样式 */
radio{
  width: 200rpx;
  height: 150rpx;
  position: relative;
  visibility: hidden;
}

.status_cg{
  color: #1296db;
  width: 250rpx;
  position: relative;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #1296db;
  z-index: 920;
  top: 35rpx;
  left: 56rpx;
}

.cg_2{
  top: 10rpx;
}

.com_ta_wrap{
  position: relative;
  width: 450rpx;
  top: 40rpx;
  left: 56rpx;
  border-left: 1px solid #1296db;
  margin-bottom: 50rpx;
}

.com_ta{
  width: 450rpx;
  height: 200rpx;
  padding: 0 10rpx;
  color: #1296db;
  font-size: 30rpx;
  position: relative;
}

.com_ph{
  font-size: 30rpx;
  color: #c9c9c9;
  position: relative;
}

.com_submit{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #1296db;
  color: white;
  position: relative;
  text-align: center;
  left: 370rpx;
  top: 20rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.code_wrap{
  width: 600rpx;
  min-height: 150rpx;
  position: relative;
  text-align: center;
  z-index: 899;
}

.com_radio{
  display: inline-block;
  width: 198rpx;
  height: 150rpx;
  background-color: white;
  position: relative;
}

.com_label{
  position: absolute;
  width: 198rpx;
  height: 150rpx;
  line-height: 150rpx;
  top: 20rpx;
  left: 0;
  z-index: 299;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.com_text{
  display: inline-block;
  width: 100%;
  height: 100%;
}

.label{
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  top: 25rpx;
  left: 0;
  z-index: 299;
  border-radius: 10rpx;
}

.label text,.com_label text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.active{
  background-color: #3399cc;
  color: white;
}

/* 展示区 */
.show_wrap{
  width: 750rpx;
  background-color: white;
  margin-top: 40rpx;
}

.tip_text{
  width: 100%;
  height: 60rpx;
  text-align: right;
  line-height: 60rpx;
  margin-right: 20rpx;
    border-bottom: 1px solid #3399cc;

}

.tip_num{
  display: inline-block;
  color: #1296db;
}

.item_wrap{
  width: 100%;
  height: 160rpx;
  position: relative;
}
.tip{
  width: 20rpx;
  height: 80rpx;
  position: absolute;
  left: 5rpx;
  top: 51rpx;
  background-color: #1296db;
}

.name{
  position: absolute;
  top: 35rpx;
  left: 45rpx;
}

.phone{
  position: absolute;
  bottom: 15rpx;
  left: 45rpx;
}

.first{
  position: absolute;
  top: 25rpx;
  right: 5rpx;
}

.team{
  position: absolute;
  bottom: 15rpx;
  right: 5rpx;
}

.item_img{
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  opacity: 0.5;
}

/* 详情页 */
.complete{
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 500;
}

.com_button{
  width: 150rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1296db;
  color: white;
  position: absolute;
  z-index:799;
  top: 40rpx;
  left: 80rpx;
  opacity: 0.95;
  border-radius: 5rpx;
}

.com_bg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 599;
  background-color: black;
  opacity: 0.4;
}

.com_showwrap{
  width: 600rpx;
  height: 1000rpx;
  background-color: white;
  position: absolute;
  z-index: 699;
  left: 75rpx;
  top: 100rpx;
  overflow-y: auto;
}

.com_name{
  font-size: 50rpx;
  text-align: center;
  margin-top: 20rpx;
  color: #1296db;
}

.com_wrap{
  width: 600rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.com_title{
  width: 200rpx;
  display: inline-block;
  text-align: right;
  color: #1296db;
}

.com_body{
  width: 400rpx;
  display: inline-block;
}

.long_body{
  width: 520rpx;
  margin-left: 40rpx;
  min-height: 200rpx;
  border-bottom: 1px solid #1296db;
  margin-bottom: 10rpx;
}


.noshow{
  display: none;
}

.blue{
  font-size:30rpx;
  color: #1296db; 
}

