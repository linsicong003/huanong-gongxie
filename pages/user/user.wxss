/* user.wxss */
page{
  background-color: #f1f1f1;
  width: 100%;
  height: 100%;
}

.mainwrapper{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.user_header{
  width: 100%;
  height: 350rpx;
  position: relative;
  background-color: white;
}

.user_img{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}

.user_name{
  width: 100%;
  text-align: center;
  line-height: 50rpx;
  margin-top: 100rpx;
}

.myact{
  width: 100%;
  margin-top: 40rpx;
  background-color: white;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 40rpx;
  overflow-x: hidden;
}